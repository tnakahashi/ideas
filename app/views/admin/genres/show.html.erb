<div class="container">
  <div class="m-md-2"><br>
  <div class="row">
    <h4 class="col-md-2 mx-auto text-center" style="background-color:#DDD">
      <strong><%= @genre.genre_name %>一覧</strong>
    </h4>
    <div class="col-md-5 mx-auto text-right"></div>
  </div>

  <diV class="m-md-2"><br></diV>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1 mx-auto text-left">
      <strong>商品ID</strong>
    </div>
    <div class="col-md-2 mx-auto text-left">
      <strong>商品名</strong>
    </div>
    <div class="col-md-1 mx-auto text-left">
      <strong>税抜価格</strong>
    </div>
    <div class="col-md-2 mx-auto text-left">
      <strong>ジャンル</strong>
    </div>
    <div class="col-md-2 mx-auto text-left">
      <strong>ステータス</strong>
    </div>
    <div class="col-md-1"></div>
  </div>

  <% @posts.each do |post| %>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1 mx-auto text-left">
      <%= link_to admin_post_path(post.id) do %>
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image', size: "100x100" %>
        <% end %>
        <%= post.title %>
      <% end %>
      <div class="col-md-1"><br></div>
    </div>
    <div class="col-md-2 mx-auto text-left"><%= post.introduction %>
      <div class="col-md-1"><br></div>
    </div>
    <div class="col-md-1 mx-auto text-left"><%= post.selling_point %>
      <div class="col-md-1"><br></div>
    </div>
    <div class="col-md-2 mx-auto text-left"><%= post.detail %>
      <div class="col-md-1"><br></div>
    </div>
    <% if post.is_deleted == false %>
      <div class="col-md-2 mx-auto text-left text-success">
        <strong><%= '表示' %></strong>
      </div>
    <% else %>
      <div class="col-md-2 mx-auto text-left text-secondary">
        <strong><%= '非表示' %></strong>
      </div>
    <% end %>
    <div class="col-md-1"></div>
  </div>
  <% end %>

</div>
