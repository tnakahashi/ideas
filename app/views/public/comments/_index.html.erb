
<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>投稿タイトル</th>
          <th>紹介文</th>
          <th>投稿ユーザ</th>
          <th>コメント本文</th>
        </tr>
      </thead>

      <tbody>
        <% comments.each do |comment| %>
          <tr>
            <td>
                <% if post.image.attached? %>
                  <%= image_tag post.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'default-image', size: "100x100" %>
                <% end %>
                <%= comment.post.title %>
              <% end %>
            </td>
            <td><%= comment.post.introduction %></td>
            <td><%= comment.post.user.name %></td>
            <td><%= comment.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>